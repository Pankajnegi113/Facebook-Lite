<div class="user-profile">
    <div class="user-info-posts">
        <div id="profile-pic">
            <%if(locals.user.postImg){%>
            <img src="<%=locals.user.avatar%>"  alt="profile pic" height="100">
            <%}else{%>
                <li><img src="/images/default.jpeg"  alt="profile pic" height="100"></li>
           <%}%>
        </div>
        <span class="display-4"><%=locals.user.firstname%> <%=locals.user.lastname%></span><br>
         <!--user profile posts-->
        <div class="posts">
                <ul id="post-list-container">
                    <%for(post of posts){
                        if(locals.user.id==post.user.id){%>
                                <%-include('post')%>
                        <%}%>
                        
                    <%}%>
                </ul>
        </div>
    </div>
    <!--Edit User Profile-->
    <div class="user-edit-profile form-group">
        <br>
        <h6 class="display-4">Edit Profile</h6><br>
        <form action="/users/update/<%=locals.user._id%>" enctype="multipart/form-data" method="POST">
            <div class="form-row">
              <div class="col">
                <input type="text" name="firstname" class="form-control" placeholder="First name" value="<%=locals.user.firstname%>">
              </div>
              <div class="col">
                <input type="text" name="lastname" class="form-control" placeholder="Last name" value="<%=locals.user.lastname%>">
              </div> 
            </div>
            <br>
            <div class="form-row">
                <div class="col">
                    <input type="text" name="email" class="form-control" placeholder="email" value="<%=locals.user.email%>">
                </div>
            </div>
            <br>
            <input type="file" name="avatar" class="form-control-file" placholder="Update Profile pic"><br>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
<script src="/js/feeds-posts.js"></script>
